<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/home_main_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="25dp"
        android:paddingBottom="20dp"
        android:background="@color/light_black">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:background="@color/white"/>
            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"/>
            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/home_main_fragment_option1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/home_main_options1"
                android:gravity="center_horizontal"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/home_main_fragment_option2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@string/home_main_options2"
                android:gravity="center_horizontal"
                android:textSize="18sp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp"
            android:src="@drawable/main_head_right_search_normal"/>
    </RelativeLayout>
</RelativeLayout>
