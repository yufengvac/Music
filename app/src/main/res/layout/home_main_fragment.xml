<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_main_fragment_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/home_main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/light_black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="18dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:background="@color/white" />

            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@color/white" />

            <View
                android:layout_width="25dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_main_fragment_option1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_main_options1"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/home_main_fragment_option2"
                    android:layout_width="80dp"
                    android:padding="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/home_main_options2"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <View
                android:id="@+id/home_main_indicator_view"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/white"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/home_main_fragment_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="18dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/main_head_right_search_normal" />
    </RelativeLayout>
</RelativeLayout>
